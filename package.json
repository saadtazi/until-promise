{
  "name": "until-promise",
  "version": "0.2.2",
  "description": "utility functions that poll until a condition is met",
  "main": "dist/index.js",
  "scripts": {
    "precommit": "npm run lint && npm test && npm run compile && git add dist",
    "prepush": "npm run lint && npm test",
    "compile": "babel src -d dist",
    "ci": "npm run lint && npm run coveralls",
    "cov": "nyc --reporter=html --reporter=text npm test",
    "coveralls": "nyc npm test && nyc report --reporter=text-lcov | coveralls",
    "lint": "eslint .",
    "postversion": "git push && git push --tags",
    "test": "mocha",
    "test:dev": "npm test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/saadtazi/until-promise.git"
  },
  "keywords": [
    "promise",
    "poll",
    "until",
    "wait",
    "retries",
    "retry"
  ],
  "author": "Saad Tazi <stazi@fruitsoftware.com>",
  "license": "ISC",
  "devDependencies": {
    "babel-cli": "^6.7.5",
    "babel-plugin-transform-es2015-modules-umd": "^6.6.5",
    "babel-preset-es2015": "^6.6.0",
    "babel-register": "^6.7.2",
    "bluebird": "^3.3.4",
    "chai": "^3.5.0",
    "chai-as-promised": "^5.3.0",
    "coveralls": "^2.11.9",
    "eslint": "^2.7.0",
    "eslint-config-airbnb": "^6.2.0",
    "eslint-plugin-react": "^4.3.0",
    "husky": "^0.11.4",
    "mocha": "^2.4.5",
    "nyc": "^6.2.1",
    "sinon": "^1.17.3",
    "sinon-chai": "^2.8.0"
  },
  "nyc": {
    "include": [
      "src/**/*"
    ]
  }
}
